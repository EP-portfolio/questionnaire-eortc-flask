# Configuration d'environnement pour l'application Flask EORTC QLQ-C30
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# =============================================================================
# CONFIGURATION FLASK
# =============================================================================

# Clé secrète Flask (OBLIGATOIRE en production)
# Générez une clé sécurisée avec : python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Mode debug (False en production)
FLASK_DEBUG=True

# =============================================================================
# CONFIGURATION AUDIO
# =============================================================================

# Clé API Google Cloud (optionnel pour l'audio)
# Obtenez votre clé sur : https://console.cloud.google.com/
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# Activation de l'audio (True/False)
AUDIO_ENABLED=True

# Utiliser Gemini TTS au lieu de Cloud TTS (True/False)
USE_GEMINI_TTS=True

# Utiliser le modèle Pro Gemini (True) ou Flash (False)
USE_PRO_MODEL=True

# =============================================================================
# CONFIGURATION BASE DE DONNÉES
# =============================================================================

# Chemin vers la base de données SQLite
DATABASE_PATH=data/responses.db

# =============================================================================
# CONFIGURATION SERVEUR
# =============================================================================

# Host du serveur (0.0.0.0 pour accepter toutes les connexions)
HOST=0.0.0.0

# Port du serveur
PORT=5000

# =============================================================================
# CONFIGURATION CACHE AUDIO
# =============================================================================

# Dossier de cache pour les fichiers audio
AUDIO_CACHE_DIR=static/audio_cache

# =============================================================================
# CONFIGURATION RECONNAISSANCE VOCALE
# =============================================================================

# Langue de reconnaissance vocale
SPEECH_LANGUAGE=fr-FR

# Timeout de reconnaissance (secondes)
SPEECH_TIMEOUT=10

# =============================================================================
# CONFIGURATION SÉCURITÉ
# =============================================================================

# Durée de vie des sessions (secondes)
PERMANENT_SESSION_LIFETIME=3600

# Taille maximale des uploads (bytes)
MAX_CONTENT_LENGTH=16777216

# =============================================================================
# CONFIGURATION LOGS
# =============================================================================

# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Fichier de log
LOG_FILE=logs/app.log

# =============================================================================
# CONFIGURATION PRODUCTION
# =============================================================================

# URL de l'application (pour les liens absolus)
APP_URL=http://localhost:5000

# Nom de l'application
APP_NAME=Questionnaire EORTC QLQ-C30

# Version de l'application
APP_VERSION=1.0.0

# =============================================================================
# CONFIGURATION EMAIL (Optionnel)
# =============================================================================

# Configuration SMTP pour les notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=True

# =============================================================================
# CONFIGURATION MONITORING (Optionnel)
# =============================================================================

# Sentry DSN pour le monitoring des erreurs
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# CONFIGURATION CACHE
# =============================================================================

# Type de cache (memory, redis, memcached)
CACHE_TYPE=memory

# URL du cache Redis (si utilisé)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CONFIGURATION RATE LIMITING
# =============================================================================

# Activation de la limitation de taux
RATELIMIT_ENABLED=True

# Nombre de requêtes par minute
RATELIMIT_PER_MINUTE=60

# =============================================================================
# CONFIGURATION CORS
# =============================================================================

# Origines autorisées pour CORS (séparées par des virgules)
CORS_ORIGINS=http://localhost:5000,https://your-domain.com

# =============================================================================
# CONFIGURATION BACKUP
# =============================================================================

# Activation des sauvegardes automatiques
BACKUP_ENABLED=True

# Fréquence des sauvegardes (heures)
BACKUP_INTERVAL=24

# Dossier de sauvegarde
BACKUP_DIR=backups

# =============================================================================
# CONFIGURATION ANALYTICS (Optionnel)
# =============================================================================

# Google Analytics ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# CONFIGURATION NOTIFICATIONS
# =============================================================================

# Activation des notifications
NOTIFICATIONS_ENABLED=True

# Webhook pour les notifications
# WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# CONFIGURATION MAINTENANCE
# =============================================================================

# Mode maintenance
MAINTENANCE_MODE=False

# Message de maintenance
MAINTENANCE_MESSAGE=Application en maintenance. Veuillez réessayer plus tard.

# =============================================================================
# CONFIGURATION DÉVELOPPEMENT
# =============================================================================

# Mode développement
DEVELOPMENT_MODE=True

# Affichage des erreurs détaillées
SHOW_ERROR_DETAILS=True

# =============================================================================
# CONFIGURATION TESTING
# =============================================================================

# Mode test
TESTING=False

# Base de données de test
TEST_DATABASE_URL=sqlite:///:memory:

# =============================================================================
# CONFIGURATION DÉPLOIEMENT
# =============================================================================

# Environnement de déploiement (development, staging, production)
ENVIRONMENT=development

# URL de l'application en production
PRODUCTION_URL=https://your-domain.com

# =============================================================================
# CONFIGURATION SÉCURITÉ AVANCÉE
# =============================================================================

# Activation de la protection CSRF
CSRF_ENABLED=True

# Clé CSRF
CSRF_SECRET_KEY=your-csrf-secret-key

# =============================================================================
# CONFIGURATION SESSION
# =============================================================================

# Type de session (filesystem, redis, memcached)
SESSION_TYPE=filesystem

# Dossier des sessions
SESSION_DIR=sessions

# =============================================================================
# CONFIGURATION UPLOAD
# =============================================================================

# Dossier des uploads
UPLOAD_FOLDER=uploads

# Extensions autorisées
ALLOWED_EXTENSIONS=wav,mp3,ogg

# =============================================================================
# CONFIGURATION COMPRESSION
# =============================================================================

# Activation de la compression
COMPRESS_ENABLED=True

# Niveau de compression (1-9)
COMPRESS_LEVEL=6

# =============================================================================
# CONFIGURATION CACHE HTTP
# =============================================================================

# Durée de cache pour les assets statiques (secondes)
STATIC_CACHE_DURATION=3600

# =============================================================================
# CONFIGURATION REDIRECTION
# =============================================================================

# Redirection HTTPS automatique
FORCE_HTTPS=False

# =============================================================================
# CONFIGURATION CUSTOM
# =============================================================================

# Ajoutez vos variables personnalisées ici
# CUSTOM_VAR1=value1
# CUSTOM_VAR2=value2
